<h1><%= @restaurant.name %></h1>
<h2><%= @restaurant.category %></h2>
<p>
  Address: <br>
  <%= @restaurant.address %>
</p>

<p>
  Telephone Number:
  <%= @restaurant.phone_number %>
</p>

<% @restaurant.reviews.each do |review| %>
  <li>
    <%= review.content %>
    <br>
    ⭐️<%= review.rating %>
  </li>
<% end %>
<%= link_to "Create a new review for #{@restaurant.name}", new_restaurant_review_path(@restaurant) %> <br>
<%= link_to "Back to the List of Fav. Restaurants", restaurants_path %>
